<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wzh.study">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" -->
        <activity android:name=".login.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.deprecated.OtherLoginAct" android:screenOrientation="portrait"/>
        <activity android:name=".login.suggest.LoginActivity" android:windowSoftInputMode="adjustResize" android:screenOrientation="portrait"/>
        <activity android:name=".login.suggest.LoadFragmentActivity" android:windowSoftInputMode="adjustResize" android:screenOrientation="portrait"/>
    </application>

</manifest>